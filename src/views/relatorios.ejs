<!DOCTYPE html>

<head>
    <title>Lista de Anúncios</title>
    <meta charset="UTF-08">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width-device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/styles/index.css">

    <script src="/scripts/calculadora.js" defer type="module"></script>



</head>

<header>
    Divulga Tudo
</header>

<body>


    <h2>Lista de anuncios</h2>
    <% anuncios.forEach(anuncio=> { %>
        <div class="anuncio">
            <ul>
                <li>Título do anúncio:<%= anuncio.titulo%>
                </li>
                <li>Cliente: <%= anuncio.cliente%>
                </li>
                <li>Data de início:<%=anuncio.datainicio %>
                </li>
                <li>Data de fim:<%= anuncio.datafim %>
                </li>
                <li>Investimento por dia:<%=anuncio.investimentod %>
                </li>
            </ul>

            <div class="relatorio">


                <ul>
                    <li>Valor Total Investido: <%= anuncio.investimentototal%>
                    </li>
                    <li>Quantidade máxima de visualizações: <%= anuncio.viewstotais %>
                    </li>
                    <li>Quantidade Máxima de cliques: <%= anuncio.clickstotais%>
                    </li>
                    <li>Quantidade Máxima de compartilhamentos: <%= anuncio.compartilhamentostotais%>
                    </li>

                </ul>

            </div>

            <%})%>



        </div>



</body>

<a href="/">
    <button>Voltar para início</button>
</a>

</html>